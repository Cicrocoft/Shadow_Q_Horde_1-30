	<!-- Vendors to use -->
	<SetVendorNpc NpcName="Harant Ironbrace" />
	<SetRepairNpc NpcName="Harant Ironbrace" />

	<!-- Restock Mulgore 1-5 -->
	<SetEnableRestockItems Value="true"/>

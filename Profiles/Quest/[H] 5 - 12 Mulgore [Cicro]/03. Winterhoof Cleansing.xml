		<AddRestockItem ItemName="Rough Arrow" NpcName="Moorat Longstride" UnderAmount="100" BuyAmount="600"/>
	</If>
	<!-- End Restock -->

	<If Condition="Data.HasActiveQuest('Winterhoof Cleansing', 754) == false and Data.HasCompletedQuest('Winterhoof Cleansing', 754) == false">
		<TakeQuest NpcName="Mull Thunderhorn" QuestId="754" QuestName="Winterhoof Cleansing" />
	</If>
	<While Condition="Data.HasActiveQuest('Winterhoof Cleansing', 754) == true and QuestFailure(754) ~= 1">
		<ClearHotspots />
		<If Condition="Nav.RangeFromMeXYZ(-2537.5065917969, -707.89581298828, -8.6658668518066) &gt; 3">
			<MoveTo X="-2537.5065917969" Y="-707.89581298828" Z="-8.6658668518066" />
		</If>
		<UseItem ItemName="Winterhoof Cleansing Totem" />
	</While>



	<If Condition="Data.HasActiveQuest('Winterhoof Cleansing', 754) == true and QuestFailure(754) == 1">
		<ReturnQuest NpcName="Mull Thunderhorn" QuestId="754" QuestName="Winterhoof Cleansing" />
	</If>
